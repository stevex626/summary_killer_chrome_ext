{
  "manifest_version": 3,
  "name": "Summary Killer",
  "version": "0.1.0",
  "description": "Summarizes the content of the current tab",
  "permissions": ["activeTab", "storage", "tabs", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
  }]
}
