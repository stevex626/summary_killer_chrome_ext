{
    "manifest_version": 3,
    "name": "Summary Killer",
    "version": "0.1.0",
    "description": "Summarizes the content of the current tab",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }
  